<aura:component 
        implements  ="flexipage:availableForAllPageTypes, force:hasRecordId, lightning:actionOverride" 
        access      ="global"
        controller  ="TitleCreateNewPicklistController"
        >

    <aura:attribute name="movieTitles"      type="Object"></aura:attribute>

    <div aura:id="editDialog" role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal slds-fade-in-open">

        <div class="slds-modal__container">
            <div class="slds-modal__header">
                <div class="slds-grid slds-wrap">

                    <div class="slds-col slds-size_4-of-12"></div>

                    <div class="slds-col slds-size_4-of-12">
                        <h2 class="slds-text-heading--medium">New Title</h2>
                    </div>

                    <div class="slds-col slds-size_4-of-12">
                        <lightning:button class="slds-button_text-destructive slds-float_right" label="Cancel" onclick="{!c.cancelDialog}" ></lightning:button>
                    </div>

                </div>
            </div>  

            <c:titleCreateNew 
                        movieTitle="{!v.movieTitles}" 
                        onvaluechange="{!c.getValueFromLwc}"
                        onsubmittitle="{!c.setTitle}"> 
            </c:titleCreateNew>

        </div>
    </div>

    <div aura:id="overlay" class="slds-backdrop slds-backdrop--open"></div>

</aura:component>	
